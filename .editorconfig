# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# JavaScript files
[*.js]
indent_style = tab
indent_size = 4

# TypeScript files
[*.ts]
indent_style = tab
indent_size = 4

# Python files
[*.py]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 4

# Bash scripts (no extension) - mkconf scripts and debian files
[*/mkconf/*]
indent_style = tab
indent_size = 4

# Debian packaging files
[*/debian/{rules,control,changelog,prerm,postinst,postrm,install,compat}]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = tab
indent_size = 2

# JSON files
[*.json]
indent_style = tab
indent_size = 2

# Markdown files
[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

# Package.json and other specific files that may need spaces
[package.json]
indent_style = space
indent_size = 2

