{
        "type": "config",
        "id": "conf.service.certbot",
        "title": "Certbot",
        "queryinfo": {
                "xpath": ".//services/certbot",
                "iterable": false
        },
        "properties": {
                "enable": {
                        "type": "boolean",
                        "default": false
                },
                "composepath": {
                        "type": "string",
                        "default": "/srv/dev-disk-by-label-data/certbot",
                        "pattern": "^/.+"
                },
                "email": {
                        "type": "string",
                        "default": "",
                        "format": "email",
                        "maxLength": 255
                },
                "domains": {
                        "type": "string",
                        "default": "",
                        "maxLength": 1024
                },
                "staging": {
                        "type": "boolean",
                        "default": true
                },
                "httpport": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 65535,
                        "default": 8088
                }
        }
}
